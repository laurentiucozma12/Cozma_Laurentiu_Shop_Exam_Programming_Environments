@page
@model PlanteeaShop.Pages.Products.EditModel

@{
    ViewData["Title"] = "Shop";
}

<h1>Edit Products</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ID" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SellerID" class="control-label">Seller Name</label>
                <select asp-for="Product.SellerID" class="form-control" asp-items="ViewBag.SellerID" ></select>
                <span asp-validation-for="Product.SellerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductOriginID" class="control-label">Product Origin</label>
                <select asp-for="Product.ProductOriginID" class="form-control" asp-items="ViewBag.ProductOriginID"></select>
                <span asp-validation-for="Product.ProductOriginID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
